<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	<changeSet author="josh.sisskind" id="18" context="default">
		<comment>
            This change adds a alt_name column to the maps table.
            See https://github.com/ngageoint/hootenanny-ui/issues/748 for details
		</comment>

        <addColumn tableName="maps">
            <column name="alt_name" type="varchar(255)">
            	<constraints nullable="true"/>
            </column>
        </addColumn>
	</changeSet>
</databaseChangeLog>